<% provide(:title, 'Check Distributor Permissions') %>

<% unless @message.nil? || @message.empty? %>
  <div><b>
    <%= @message %>
  </b></div><br><br>
<% end %>

<%= form_tag({controller: "distributors", action: "check"}, method: 'get') do %>
  <%= label_tag "Distributor:"  %>
  <%= select_tag "distributor", options_for_select(@distributors.values.collect{|data| data["name"]}), required: true, prompt: "-Distributor-" %>
  <%= label_tag "Location to check:"  %>
  <%= select_tag "country", options_for_select(@locations["Country Name"].uniq), id: "Country", required: true, prompt: "-Country-" %>
  <%= select_tag "province", options_for_select(@locations["Province Name"].uniq), required: true, prompt: "-Province-" %>
  <%= select_tag "city", options_for_select(@locations["City Name"].uniq), required: true, prompt: "-City-" %>
  <div class="actions">
    <%= submit_tag "Check Permission" %>
  </div>
<% end %>
<%= link_to 'Back', distributors_path %>
