<section class="content-header">
  <h1> Distbutors <small class= "pull-right"><%= link_to 'New Distbutor', new_distbutor_path %></small></h1>
</section>

<div class="box">
  <div class="box-header">
    <h3 class="box-title">Check Permisions for <b><%= @distbutor.name %></b></h3>
  </div>
  <div class="box-body">
    <div role="form">
      <%= hidden_field :permision, :distbutor, value: @distbutor.id%>
      <div class="form-group">
        <%= label_tag :country %>
        <%= collection_select :permision,:countries, Country.order(:name).all, :id, :name, {}, {class: "form-control select2"}%>
      </div>
      <div class="form-group">
        <%= label_tag :State %>
        <%= select :permision,:states, {}, {},{class: "form-control",style: "width:100%"} %>
      </div>
      <div class="form-group">
        <%= label_tag :city %>
        <%= select :permision,:cities, {}, {},{class: "form-control",style: "width:100%"} %>
      </div>
      <div class="form-group">
        <button id="ds_permision_check">Check Permision</button>
      </div>
    </div>
  </div>
</div>
<%= link_to 'Back', distbutors_path %>
