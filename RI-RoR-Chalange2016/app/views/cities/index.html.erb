<section class="content-header">
  <h1> Cities <small class= "pull-right"><%= link_to 'New City', new_city_path %></small></h1>
</section>
<div class="box">
  <!-- /.box-header -->
  <div class="box-body">
    <div class="row">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>State</th>
            <th>State Code</th>
            <th>Country</th>
            <th>Country Code</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @cities.each do |city| %>
            <tr>
              <td><%= city.name %></td>
              <td><%= city.code %></td>
              <td><%= city.state.name %></td>
              <td><%= city.state.code %></td>
              <td><%= city.state.country.name %></td>
              <td><%= city.state.country.code %></td>
              <td><%= link_to 'Edit', edit_city_path(city) %></td>
              <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>State</th>
            <th>State Code</th>
            <th>Country</th>
            <th>Country Code</th>
            <th colspan="2"></th>
          </tr>
        </tfoot>
      </table>
    </div>
    <div class="row">
      <div class="col-sm-4"><%= page_entries_info @cities, entry_name: 'city' %></div>
      <div class="col-sm-8 dataTables_paginate"><%= paginate @cities %></div>
    </div>
  </div>
  <!-- /.box-body -->
</div>
